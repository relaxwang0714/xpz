        SELECT
            SUM(is_delay = 0) AS normal,
            SUM(is_delay = 1) AS warn,
            SUM(is_delay = 2) AS log
        FROM
            village_management
        WHERE
            1 = 1
        AND village_id = #{villageId,jdbcType=INTEGER};

    </select>
    <select id="CountGaizaoByVillageId" parameterType="java.lang.Integer" resultMap="Countgaizao">
        SELECT
            SUM(is_new = 0) AS gaizao,
            SUM(is_new = 1) AS xinzeng
        FROM
            village_management
        WHERE
            1 = 1
          AND village_id = #{villageId,jdbcType=INTEGER};

    </select>

