            <arg column="update_time" javaType="java.util.Date" jdbcType="TIMESTAMP" />
            <arg column="village_id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="program_id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="program_area" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="response_people" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="phone" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="carmera_id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="is_delay" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="is_new" javaType="java.lang.Integer" jdbcType="INTEGER" />
        </constructor>
    </resultMap>
    <resultMap id="Countyujin" type="com.example.xpz.entity.Yujin">
        <constructor>
            <arg column="normal" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="warn" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="log" javaType="java.lang.Integer" jdbcType="INTEGER" />
        </constructor>
    </resultMap>
