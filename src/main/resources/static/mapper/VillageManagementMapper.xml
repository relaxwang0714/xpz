        </constructor>
    </resultMap>
    <sql id="Base_Column_List">
        id, create_time,update_time,village_id,program_id,program_area,response_people,phone,carmera_id,is_delay,is_new
    </sql>
    <select id="selectByVillageId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from village_management
        where village_id = #{villageId,jdbcType=INTEGER}
    </select>
    <select id="selectByCount" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        is_delay
        from village_management
        where village_id = #{villageId,jdbcType=INTEGER}
    </select>
