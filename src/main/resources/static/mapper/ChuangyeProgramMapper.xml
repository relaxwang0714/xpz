<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.xpz.mapper.ChuangyeProgramMapper">
    <resultMap id="BaseResultMap" type="com.example.xpz.entity.ChuangyeProgram">
        <constructor>
            <idArg column="id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="create_time" javaType="java.util.Date" jdbcType="TIMESTAMP" />
            <arg column="update_time" javaType="java.util.Date" jdbcType="TIMESTAMP" />
            <arg column="chuangke_id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="program_name" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="phone" javaType="java.lang.String" jdbcType="VARCHAR" />
            <arg column="village_id" javaType="java.lang.Integer" jdbcType="INTEGER" />
            <arg column="name" javaType="java.lang.String" jdbcType="VARCHAR" />
        </constructor>
    </resultMap>
    <sql id="Base_Column_List">
        p.id, p.create_time,p.update_time,p.chuangke_id,p.program_name,p.phone,p.village_id,k.name
    </sql>
    <select id="selectByVillageId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from  chuangye_program p
        RIGHT JOIN chuangke k ON p.chuangke_id=k.id
        where p.village_id = #{villageId,jdbcType=INTEGER}
    </select>


</mapper>